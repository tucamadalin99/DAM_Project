<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LicenseFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="60dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_bg">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="151dp"
            android:src="@drawable/avatar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNameSurname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:fontFamily="@font/montserrat"
                android:layout_gravity="center"
                android:layout_marginTop="150sp"
                android:text="Name Surname"/>

            <TextView
                android:id="@+id/tvBorn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birth"
                android:fontFamily="@font/montserrat"
                android:textSize="15dp"
                android:drawableLeft="@drawable/born"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvCity"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:fontFamily="@font/montserrat"
                android:textSize="15dp"
                android:drawableLeft="@drawable/city"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvCounty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="County"
                android:fontFamily="@font/montserrat"
                android:textSize="15dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvIssueDate"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Issued"
                android:drawableLeft="@drawable/date"
                android:fontFamily="@font/montserrat"
                android:textSize="15dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Issued"
                android:drawableLeft="@drawable/date"
                android:fontFamily="@font/montserrat"
                android:textSize="15dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvPoliceStation"
                android:layout_marginTop="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Police Station"
                android:drawableLeft="@drawable/police"
                android:fontFamily="@font/montserrat"
                android:textSize="15dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvLicenseId"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="License Id"
                android:drawableLeft="@drawable/licenseid"
                android:fontFamily="@font/montserrat"
                android:textSize="15dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvPersonId"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Id"
                android:drawableLeft="@drawable/licenseid"
                android:fontFamily="@font/montserrat"
                android:textSize="15dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvLicenseSort"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="License Types"
                android:drawableLeft="@drawable/car_icon"
                android:fontFamily="@font/montserrat"
                android:textSize="15dp"
                android:layout_gravity="center"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </ScrollView>

</FrameLayout>